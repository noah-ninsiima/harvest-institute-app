rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }
    function isStudent() {
      return hasRole('student');
    }
    function isAdmin() {
      return hasRole('admin');
    }
    function isInstructor() {
      return hasRole('instructor');
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
    }

    // --- Courses Collection ---
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- Enrollments Collection ---
    match /enrollments/{enrollmentId} {
      // READ: Admin, Student (own), Instructor (own courses)
      allow read: if isAdmin();
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow read: if isInstructor() &&
                   get(/databases/$(database)/documents/courses/$(resource.data.course_id)).data.instructor_id == request.auth.uid;

      // DEBUGGING RULE: Allow ALL authenticated users to create enrollments if user_id matches
      // This REMOVES the isStudent() check temporarily to isolate if it's a claim issue.
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.user_id;

      // UPDATE: Admin only (e.g., changing payment status)
      allow update: if isAdmin();
    }

    // --- Payments, Assignments, Submissions (Placeholders) ---
    match /payments/{paymentId} {
      allow read, write: if isAdmin();
    }

    // Default to deny all access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
