rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }
    function isStudent() {
      return hasRole('student');
    }
    function isAdmin() {
      return hasRole('admin');
    }
    function isInstructor() {
      return hasRole('instructor');
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
    }

    // --- Courses Collection ---
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- Enrollments Collection ---
    match /enrollments/{enrollmentId} {
      // READ: Admin, Student (own), Instructor (own courses)
      allow read: if isAdmin();
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow read: if isInstructor() &&
                   get(/databases/$(database)/documents/courses/$(resource.data.course_id)).data.instructor_id == request.auth.uid;

      // CREATE: Simplified for debugging.
      // Allows creation if the user is authenticated and the document ID matches the composite key format.
      // We removed the payload validation (user_id inside data) for a moment to see if that's the blocker.
      allow create: if isAuthenticated() && enrollmentId == request.auth.uid + '_' + request.resource.data.course_id;

      // UPDATE: Admin only (e.g., changing payment status)
      allow update: if isAdmin();
    }

    // --- Assignments Collection (New) ---
    match /assignments/{assignmentId} {
      allow read: if isAuthenticated(); 
      allow create: if isInstructor() && request.resource.data.instructor_id == request.auth.uid;
      allow update, delete: if isInstructor() && resource.data.instructor_id == request.auth.uid;
    }

    // --- Submissions Collection (New) ---
    match /submissions/{submissionId} {
      allow read: if isInstructor() || (isAuthenticated() && resource.data.user_id == request.auth.uid);
      allow create: if isStudent() && request.resource.data.user_id == request.auth.uid;
    }

    // --- Payments Collection ---
    match /payments/{paymentId} {
      allow read, write: if isAdmin();
    }

    // Default to deny all access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
